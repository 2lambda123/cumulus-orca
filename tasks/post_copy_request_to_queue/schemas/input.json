{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "post_copy_request_to_queue Lambda Input",
  "description": "The input for the post_copy_request_to_queue Lambda coming from S3 trigger.",
  "type": "object",
  "properties": {
    "Records": {
      "description": "A list of dicts representing details of the S3 object that was recovered.",
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "s3": {
              "type": "object",
              "properties": {
                "object": {
                  "type": "object",
                  "properties": {
                    "key": {
                      "type": "string"
                    },
                    "size": {
                      "type": "integer"
                    },
                    "eTag": {
                      "type": "string"
                    },
                    "sequencer": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "key"
                  ]
                }
              },
              "required": [
                "object"
              ]
            }
          },
          "required": [
            "s3"
          ]
        }
      ]
    }
  },
  "required": [
    "Records"
  ]
}